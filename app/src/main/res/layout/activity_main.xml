<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_soft"
        android:layout_width="362dp"
        android:layout_height="500dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="21dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/button_classic_detail"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/linear_layout_soft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_green"
                android:layout_width="match_parent"
                android:layout_height="345dp"
                android:adjustViewBounds="true"
                android:background="#4CAF50"
                android:text="Hello, World!"
                android:textColor="#FFFFFF"
                android:src="@drawable/plate_soft"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/text_view_soft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="Soft\n40 °C"

                android:textColor="#000000"
                android:textSize="32sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_classic"
        android:layout_width="367dp"
        android:layout_height="502dp"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="21dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/button_soft_detail"
        app:layout_constraintStart_toEndOf="@+id/card_soft"
        tools:ignore="MissingConstraints">

        <!-- Add your card content here -->
        <LinearLayout
            android:id="@+id/linear_layout_classic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_orange"
                android:layout_width="match_parent"
                android:layout_height="345dp"
                android:background="#FF9800"
                android:text="Hello, World!"
                android:src="@drawable/plate_classic"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/text_view_classic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="Classic\n60 °C"

                android:textColor="#000000"
                android:textSize="32sp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_strong"
        android:layout_width="359dp"
        android:layout_height="502dp"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/button_strong_detail3"
        app:layout_constraintStart_toEndOf="@+id/card_classic"
        tools:ignore="MissingConstraints">

        <!-- Add your card content here -->
        <LinearLayout
            android:id="@+id/linear_layout_strong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_red"
                android:layout_width="match_parent"
                android:layout_height="345dp"
                android:background="#F44336"
                android:text="Hello, World!"
                android:src="@drawable/plate_strong"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/text_view_strong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="Strong\n80 °C"

                android:textColor="#000000"
                android:textSize="32sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/button_soft_detail"
        android:layout_width="362dp"
        android:layout_height="80dp"
        android:layout_marginStart="409dp"
        android:layout_marginBottom="25dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="@+id/button_classic_detail"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/button_classic_detail"
        android:layout_width="362dp"
        android:layout_height="80dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="25dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_strong_detail3"
        android:layout_width="362dp"
        android:layout_height="80dp"
        android:layout_marginStart="408dp"
        android:layout_marginBottom="24dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayout2"
        app:layout_constraintStart_toStartOf="@+id/button_soft_detail"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>