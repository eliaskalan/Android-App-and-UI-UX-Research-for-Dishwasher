<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_soft"
        android:layout_width="362dp"
        android:layout_height="500dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="94dp">
        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/image_view_green"
                android:layout_width="match_parent"
                android:layout_height="345dp"
                android:background="#4CAF50"
                android:text="Hello, World!"
                android:textColor="#FFFFFF" />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/text_view_soft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Soft\n40 Â°C"

                android:textColor="#000000"
                android:textSize="32sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_classic"
        android:layout_width="367dp"
        android:layout_height="502dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="458dp"
        tools:layout_editor_absoluteY="92dp">

        <!-- Add your card content here -->

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_strong"
        android:layout_width="359dp"
        android:layout_height="502dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="874dp"
        tools:layout_editor_absoluteY="94dp">

        <!-- Add your card content here -->

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/button_soft_detail"
        android:layout_width="362dp"
        android:layout_height="80dp"
        android:text="Button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="463dp"
        tools:layout_editor_absoluteY="615dp" />



    <Button
        android:id="@+id/button_classic_detail"
        android:layout_width="362dp"
        android:layout_height="80dp"
        android:text="Button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="615dp" />

    <Button
        android:id="@+id/button_strong_detail3"
        android:layout_width="362dp"
        android:layout_height="80dp"
        android:text="Button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="874dp"
        tools:layout_editor_absoluteY="615dp" />

</androidx.constraintlayout.widget.ConstraintLayout>